                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_total_daughters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/total_daughters"
                android:fontFamily="@font/core_regular"
                android:inputType="number" />

            <TextView
                android:id="@+id/married_daughters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_total_daughters"
                android:layout_margin="15dp"
                android:fontFamily="@font/core_regular"
                android:text="Married"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_married_daughters"
                android:layout_width="match_parent"
