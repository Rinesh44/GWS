                <RadioButton
                    android:id="@+id/rb_ustool_commode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commode" />

                <RadioButton
                    android:id="@+id/rb_ustool_diaper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diaper" />


            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/core_regular"
                android:padding="5dp"
                android:text="Long Term Sick (LTS)"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_parkinson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/lts"
                android:padding="3dp"
                android:text="Parkinson" />

            <CheckBox
                android:id="@+id/cb_cancer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_parkinson"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/lts"
                android:padding="3dp"
                android:text="Cancer" />

            <CheckBox
                android:id="@+id/cb_hypertension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_cancer"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/lts"
                android:padding="3dp"
                android:text="Hypertension" />

            <CheckBox
                android:id="@+id/cb_diabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_hypertension"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/lts"
                android:padding="3dp"
                android:text="Diabetes(Sugar)" />

            <CheckBox
                android:id="@+id/cb_asthma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_diabetes"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/lts"
                android:padding="3dp"
                android:text="Asthma/COPD" />

            <CheckBox
                android:id="@+id/cb_osteoarthritis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_asthma"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/lts"
                android:padding="3dp"
                android:text="Osteorthritis (OA)" />

            <CheckBox
                android:id="@+id/cb_dementia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_osteoarthritis"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/lts"
                android:padding="3dp"
                android:text="Dementia" />

            <CheckBox
                android:id="@+id/cb_kidneydisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_dementia"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/lts"
                android:padding="3dp"
                android:text="Chronic Kidney Disease" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/core_regular"
            android:padding="5dp"
            android:text="State if any other:"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/core_regular"
            android:text="State of Family Support"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

