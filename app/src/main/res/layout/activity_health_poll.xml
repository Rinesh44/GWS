<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondary"
        android:divider="?android:dividerHorizontal"
        android:orientation="vertical"
        android:dividerPadding="15dp"
        android:showDividers="middle">

        <include
            android:id="@+id/select"
            layout="@layout/appbar_for_maps_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/core_regular"
            android:gravity="center"
            android:text="Select Person"
            android:textSize="20sp" />


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/textPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            android:background="@android:drawable/btn_dropdown"
            android:fontFamily="@font/core_regular"
            android:gravity="center"
            android:padding="5dp"
            android:spinnerMode="dropdown"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/eye_sight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/core_regular"
                android:padding="5dp"
                android:text="Eye Sight"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/grp_eye_sight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="2dp"
                android:padding="3dp">

                <RadioButton
                    android:id="@+id/rb_eyesight_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poor" />

                <RadioButton
                    android:id="@+id/rb_eyesight_verypoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very Poor" />


            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/core_regular"
                android:padding="5dp"
                android:text="Hearing"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/grp_hearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="2dp"
                android:padding="3dp">

                <RadioButton
                    android:id="@+id/rb_hearing_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poor" />

                <RadioButton
                    android:id="@+id/rb_hearing_verypoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very Poor" />

            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mobility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/core_regular"
                android:padding="5dp"
                android:text="Mobility"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/grp_mobility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="2dp"
                android:padding="3dp">


                <RadioButton
                    android:id="@+id/rb_mobility_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poor" />

                <RadioButton
                    android:id="@+id/rb_mobility_verypoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very Poor" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mental_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/core_regular"
                android:padding="5dp"
                android:text="Mental Health"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/grp_mental_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="2dp"
                android:padding="3dp">

                <RadioButton
                    android:id="@+id/rb_mentalhealth_poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poor" />

                <RadioButton
                    android:id="@+id/rb_mentalhealth_verypoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very Poor" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/core_regular"
                android:padding="5dp"
                android:text="Movement"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/grp_movement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:padding="3dp">

                <RadioButton
                    android:id="@+id/rb_movement_bedridded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bedridden" />

                <RadioButton
                    android:id="@+id/rb_movement_wchair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wheel Chair" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/urine_stool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/core_regular"
                android:padding="5dp"
                android:text="Urine/Stool"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/grp_urine_stool"
