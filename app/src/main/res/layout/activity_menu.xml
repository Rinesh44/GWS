<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/select"
                layout="@layout/appbar_for_maps_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textSize="15.0sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffeeeeee"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10.0dip"
                        android:layout_weight="1.0"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/top_left"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/listvillages"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:scaleType="fitXY"
                            android:text="Information" />

                        <TextView
                            android:id="@+id/top_right"
                            android:layout_width="0.0dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/lastvisit"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="Visited Places" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/middle_left"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/search_person"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="Search Person" />

                        <TextView
                            android:id="@+id/middle_right"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/current_location"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="Current Location" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/directions"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/ic_directions"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="Directions" />

                        <TextView
                            android:id="@+id/bottom_right"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/ic_ar"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="AR View" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0">

                        <!--    <TextView
                                android:id="@+id/qrscanner"
                                android:layout_width="0.0dip"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="10.0dip"
                                android:elevation="4dp"
                                android:layout_marginBottom="10.0dip"
                                android:layout_weight="1.0"
                                android:background="@drawable/onmenuclick"
                                android:drawableTop="@drawable/ic_payment_56dp"
                                android:fontFamily="@font/core_regular"
                                android:gravity="center"
                                android:padding="15.0dip"
                                android:text="Make Payment" />-->

                        <TextView
                            android:id="@+id/risk_update"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/ic_question_answer"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="QNA" />

                        <TextView
                            android:id="@+id/addinfo"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/ic_addinfo"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="Add Information" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/gallery"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/ic_gallery"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="Gallery" />

                        <TextView
                            android:id="@+id/poll"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/ic_info"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="Risk Update" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/psa"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/ic_poll"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="Pensioner Risk Assessment" />

                        <TextView
                            android:id="@+id/add_photos"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:layout_weight="1.0"
                            android:background="@drawable/onmenuclick"
                            android:drawableTop="@drawable/ic_add_pictures"
                            android:elevation="4dp"
                            android:fontFamily="@font/core_regular"
                            android:gravity="center"
                            android:padding="15.0dip"
                            android:text="Add Pictures" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.example.android.gurkha.NavigationDrawer"
        android:layout_width="300.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>