<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.gurkha.Person_Details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/select"
                layout="@layout/appbar_for_maps_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:padding="5dp">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spinnerAwc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:spinnerMode="dropdown"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/textName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttype"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="7dp"
                        android:background="@drawable/onmenuclick"
                        android:gravity="center"
                        android:hint="Name"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/textarmyno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textName"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="7dp"
                        android:background="@drawable/onmenuclick"
                        android:gravity="center"
                        android:hint="Army No"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/textwpsp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textarmyno"
                        android:background="@android:drawable/btn_dropdown"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:spinnerMode="dropdown"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/textaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textwpsp"
                        android:layout_margin="7dp"
                        android:background="@drawable/onmenuclick"
                        android:gravity="center"
                        android:hint="Address"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/textdistrict"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textaddress"
                        android:layout_margin="7dp"
                        android:background="@drawable/onmenuclick"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="Approved_Grant"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                    <EditText
                        android:id="@+id/textgrant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textaddress"
                        android:layout_margin="7dp"
                        android:background="@drawable/onmenuclick"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="Approved_Grant"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/textcost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textgrant"
                        android:layout_margin="7dp"
                        android:background="@drawable/onmenuclick"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="Cost"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/textsupervisor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textcost"
                        android:layout_margin="7dp"
                        android:background="@drawable/onmenuclick"
                        android:gravity="center"
                        android:hint="Supervisor"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/textremarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textsupervisor"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="7dp"
                        android:background="@drawable/onmenuclick"
                        android:gravity="center"
                        android:hint="Remarks"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/textstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textremarks"
                        android:background="@android:drawable/btn_dropdown"
                        android:padding="5dp"
                        android:spinnerMode="dropdown"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/texttype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:layout_below="@+id/spinnerAwc"
                        android:spinnerMode="dropdown"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textstatus"
                        android:layout_marginTop="10dp"
                        android:background="@android:drawable/btn_default"
                        android:text="ADD" />

                    <TextView
                        android:id="@+id/hiddenDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:visibility="invisible" />

                </RelativeLayout>
            </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.example.android.gurkha.NavigationDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>