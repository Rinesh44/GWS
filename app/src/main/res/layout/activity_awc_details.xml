<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.gurkha.Person_Details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/select"
                layout="@layout/appbar_for_maps_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/select"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Category:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textcategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/category"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/category"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Name:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/category"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/name"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/armyno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/name"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Army No:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textarmyno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/name"
                                android:layout_centerHorizontal="true"
                                android:inputType="number"
                                android:layout_toRightOf="@+id/armyno"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />


                            <TextView
                                android:id="@+id/wpsp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/armyno"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="WP/SP:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textwpsp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/armyno"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/wpsp"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textwpsp"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Address:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textaddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textwpsp"
                                android:layout_toRightOf="@+id/address"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />


                            <TextView
                                android:id="@+id/grant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textaddress"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Approved Grant:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textgrant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textaddress"
                                android:layout_toRightOf="@+id/grant"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textgrant"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Construction Cost:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textcost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textgrant"
                                android:layout_toRightOf="@+id/cost"
                                android:inputType="number"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/supervisor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textcost"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Project Supervisor:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textsupervisor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textcost"
                                android:layout_toRightOf="@+id/supervisor"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/remarks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/supervisor"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Remarks:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textremarks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textsupervisor"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/remarks"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/remarks"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Status:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textstatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textremarks"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/status"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/status"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:text="Location:"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"
                                android:textStyle="italic" />

                            <EditText
                                android:id="@+id/textlocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/status"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/location"
                                android:background="@android:color/transparent"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/core_regular"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                        </RelativeLayout>

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_margin="20dp"
                            android:backgroundTint="#dd4b39"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/ic_done_all"
                            android:visibility="gone"
                            app:borderWidth="0dp"
                            app:elevation="8dp"
                            app:fabSize="mini" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.example.android.gurkha.NavigationDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>