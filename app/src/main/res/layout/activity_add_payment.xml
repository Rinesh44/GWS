<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.gurkha.Person_Details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/select"
                layout="@layout/appbar_for_maps_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSecondary">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/core_regular"
                                android:layout_marginTop="10dp"
                                android:text="Select Person"
                                android:textSize="20sp" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/textperson"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/core_regular"
                                android:background="@android:drawable/btn_dropdown"
                                android:gravity="center"
                                android:padding="5dp"
                                android:spinnerMode="dropdown"
                                android:textColor="@android:color/black"
                                android:textSize="20sp"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerAwc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="7dp"
                            android:fontFamily="@font/core_regular"
                            android:background="@android:drawable/btn_dropdown"
                            android:gravity="center"
                            android:padding="5dp"
                            android:spinnerMode="dropdown"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"/>

                            <EditText
                                android:id="@+id/textpaiddate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textperson"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="7dp"
                                android:clickable="true"
                                android:focusable="false"
                                android:fontFamily="@font/core_regular"
                                android:gravity="center"
                                android:hint="Pick Paid Date"
                                android:textSize="20sp" />


                            <EditText
                                android:id="@+id/textpaid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textgranted"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/core_regular" android:gravity="center"
                                android:hint="Paid"
                                android:inputType="number"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/textunpaidamount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textpaid"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/core_regular"
                                android:gravity="center"
                                android:hint="Unpaid Amount"
                                android:inputType="number"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <Spinner
                                android:id="@+id/textgrant"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textunpaidamount"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/core_regular"
                                android:gravity="center"
                                android:spinnerMode="dropdown"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/textitemsgiven"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textgrant"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="7dp"
                                android:gravity="center"
                                android:fontFamily="@font/core_regular"
                                android:hint="Items Given"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />


                            <EditText
                                android:id="@+id/textcategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textitemsgiven"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/core_regular"
                                android:gravity="center"
                                android:hint="Category"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />


                            <EditText
                                android:id="@+id/texttotalcost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textcategory"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/core_regular"
                                android:gravity="center"
                                android:hint="Total Cost"
                                android:inputType="number"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/textgrantedamount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/texttotalcost"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/core_regular"
                                android:gravity="center"
                                android:hint="Granted Amount"
                                android:inputType="number"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/textdategrantedover"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textgrantedamount"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="7dp"
                                android:fontFamily="@font/core_regular"
                                android:gravity="center"
                                android:focusable="false"
                                android:hint="Pick Date Granted Over"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />


                            <EditText
                                android:id="@+id/textpvno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textdategrantedover"
                                android:layout_margin="7dp"
                                android:gravity="center"
                                android:fontFamily="@font/core_regular"
                                android:hint="PV/NO"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/textsponsername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textpvno"
                                android:layout_margin="7dp"
                                android:gravity="center"
                                android:fontFamily="@font/core_regular"
                                android:hint="Sponser Name"
                                android:textColor="@android:color/black"
                                android:textSize="20sp" />

                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textsponsername"
                                android:layout_marginTop="10dp"
                                android:focusable="true"
                                android:clickable="true"
                                android:layout_margin="10dp"
                                android:textColor="@android:color/white"
                                android:foreground="?attr/selectableItemBackground"
                                android:background="@color/colorButton"
                                android:fontFamily="@font/core_regular"
                                android:text="ADD" />

                        <TextView
                            android:id="@+id/hiddenDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/core_regular"
                            android:textAlignment="center"
                            android:visibility="invisible" />

                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.example.android.gurkha.NavigationDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>