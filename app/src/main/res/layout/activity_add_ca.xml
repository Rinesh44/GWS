<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.gurkha.Person_Details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/select"
                layout="@layout/appbar_for_maps_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:padding="5dp">

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerAwc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:background="@android:drawable/btn_dropdown"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:spinnerMode="dropdown"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/textscheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/onmenuclick"
                            android:hint="Scheme_no"
                            android:layout_margin="7dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_below="@+id/textdistrict"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/textvillage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textscheme"
                            android:layout_margin="7dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:hint="Village"
                            android:background="@drawable/onmenuclick"
                            android:layout_centerHorizontal="true"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/textvdc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textvillage"
                            android:layout_margin="7dp"
                            android:hint="VDC"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/textwno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textvdc"
                            android:hint="W/No"
                            android:gravity="center"
                            android:layout_margin="7dp"
                            android:inputType="number"
                            android:padding="5dp"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/textservicetype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textwno"
                            android:layout_margin="7dp"
                            android:gravity="center"
                            android:hint="Service Type"
                            android:padding="5dp"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/texthhtotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textservicetype"
                            android:layout_margin="7dp"
                            android:hint="HH Total"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="5dp"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/texttenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/texthhtotal"
                            android:layout_margin="7dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:hint="Tenta.Tap No/Block"
                            android:padding="5dp"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/textpopulation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/texttenta"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:hint="Total Population"
                            android:layout_margin="7dp"
                            android:inputType="number"
                            android:padding="5dp"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/coveragelevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textpopulation"
                            android:layout_centerHorizontal="true"
                            android:padding="5dp"
                            android:text="School Coverage in W/S:"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/textlevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/coveragelevel"
                            android:hint="Level"
                            android:gravity="center"
                            android:layout_margin="7dp"
                            android:padding="5dp"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/texttotpopulation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textlevel"
                            android:layout_margin="7dp"
                            android:hint="Population"
                            android:gravity="center"
                            android:padding="5dp"
                            android:inputType="number"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/ric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/texttotpopulation"
                            android:layout_centerHorizontal="true"
                            android:padding="5dp"
                            android:text="Rough Indication of Cost(RIC)"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/textgws"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ric"
                            android:hint="GWS/KAAA"
                            android:layout_margin="7dp"
                            android:inputType="number"
                            android:padding="5dp"
                            android:gravity="center"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/textcommunity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textgws"
                            android:layout_margin="7dp"
                            android:hint="Community"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="5dp"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/texttotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textcommunity"
                            android:hint="Total"
                            android:layout_margin="7dp"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="5dp"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/textfunder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/texttotal"
                            android:layout_margin="7dp"
                            android:hint="Funder"
                            android:gravity="center"
                            android:padding="5dp"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/textdistrict"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:padding="5dp"
                            android:hint="District"
                            android:layout_below="@+id/spinnerAwc"
                            android:gravity="center"
                            android:background="@drawable/onmenuclick"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textfunder"
                            android:layout_marginTop="10dp"
                            android:background="@android:drawable/btn_default"
                            android:text="ADD" />

                        <TextView
                            android:id="@+id/hiddenDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:visibility="invisible" />

                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.example.android.gurkha.NavigationDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />
</android.support.v4.widget.DrawerLayout>