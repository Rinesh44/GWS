<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid
                android:color="#E0E0E0" />
            <stroke
                android:width="1dip"
                />
            <corners
                android:radius="1dip" />
            <size
                android:height="30dp" android:width="120dp"/>
            <gradient android:angle="180" android:startColor="#e0e0e0"  android:endColor="#58387b"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="1dip"/>
            <size android:height="30dp" android:width="120dp"/>
            <stroke android:width="1dip" android:color="#000000"/>
            <gradient android:angle="-90" android:startColor="#000000"  android:endColor="#000000"/>

        </shape>
    </item>
</selector>